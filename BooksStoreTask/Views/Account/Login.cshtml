@model SignInModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    @*<link href="~/css/StyleSheetMenu.css" rel="stylesheet" type="text/css" />*@
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" />


    <title>Login</title>
</head>
<body>
   
        <div class="container-fluid">

            <div class="formBox">

                <div class="header">
                    <h2>Book Manage System Log In</h2>
                </div>

                <form method="post">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label">UserName</label>
                                <input type="text" class="form-control" asp-for="Username" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label">Password</label>
                                <input type="password" class="form-control" asp-for="Password" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="checkbox" class="checkbox" asp-for="RememberMe " />
                                <label class="form-check-label">Remember me</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" asp-action="CheckPassword" />
                                @ViewData["errorMessage"]
                            </div>
                        </div>
                    </div>
                </form>


            </div>
        </div>

 
</body>
</html>
